<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#D9DCDC"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_profile_view"
        android:background="#fff"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/me_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_avatar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/me_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/me_avatar"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/me_weixinhao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="微信号:"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/me_avatar"
            android:layout_below="@+id/me_nickname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/me_number"
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:text="a123456"
            android:layout_toRightOf="@+id/me_weixinhao"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/me_layout_photo"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_me_photo"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_layout_collect"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_me_collect"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_layout_money"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_me_money"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_layout_smail"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_me_smail"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="表情"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/me_layout_setting"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_me_setting"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            />

    </LinearLayout>


</LinearLayout>